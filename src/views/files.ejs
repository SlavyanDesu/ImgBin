<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Files | TempStorage</title>
  <script>
    function deleteFile(publicId) {
      if (!confirm("Are you sure you want to delete this file?")) return
    
      fetch(`/delete/${encodeURIComponent(publicId)}`, { method: 'DELETE' }) 
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            alert("File deleted successfully!")
            location.reload()
          } else {
            alert("Failed to delete file.")
          }
        })
        .catch(error => console.error("Error:", error))
    }
  </script>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      background-color: #121212;
      color: #e0e0e0;
    }

    .table-container {
      overflow-x: auto;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      text-align: center;
    }

    th, td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #333;
      text-align: center;
      vertical-align: middle;
    }

    th {
      background-color: #1f1f1f;
      color: #e0e0e0;
    }

    .filename {
      max-width: 300px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .download-btn {
      background-color: blue;
      color: white;
      font-weight: bold;
    }

    .delete-btn {
      background-color: red;
      color: white;
      font-weight: bold;
    }

    .delete-btn:hover {
      background-color: darkred;
    }

    .download-btn:hover {
      background-color: darkblue;
    }

    tbody tr:nth-child(odd) {
      background-color: #1e1e1e;
    }

    tbody tr:hover {
      background-color: #2a2a2a;
    }

    .thumbnail {
      width: 100px;
      height: 100px;
      object-fit: cover;
      border-radius: 5px;
      margin: 0 auto;
    }

    .action-button {
      padding: 5px 10px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1><a href="/" style="color: white; text-decoration: none;">TempStorage</a></h1>
  <div class="table-container">
    <table class="w-full border-collapse text-white">
      <thead>
        <tr class="bg-gray-900">
          <th class="p-3 text-left">Thumbnail</th>
          <th class="p-3 text-left">Filename</th>
          <th class="p-3 text-left">Date Uploaded</th>
          <th class="p-3 text-left">Size</th>
          <th class="p-3 text-left">Action</th>
        </tr>
      </thead>
      <tbody>
        <% files.forEach(file => { %>
          <tr class="border-b border-gray-700">
            <td class="p-3">
              <img src="<%= file.thumbnailUrl %>" alt="Thumbnail" class="w-16 h-16 object-cover">
            </td>
            <td class="p-3"><%= file.filename %></td>
            <td class="p-3"><%= new Date(file.dateUploaded).toLocaleDateString() %></td>
            <td class="p-3"><%= (file.size / 1024).toFixed(2) %> KB</td>
            <td class="p-3 flex space-x-2"> 
              <button onclick="location.href='<%= file.downloadUrl %>'" class="action-button download-btn">Download</button>
              <button onclick="deleteFile('<%= file.filename %>')" class="action-button delete-btn">Delete</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <footer style="text-align: center; padding: 10px; font-size: 14px; opacity: 0.7;">
    Â© 2025 Heikal Syah Shiddiq. All rights reserved.
  </footer>  
</body>
</html>
